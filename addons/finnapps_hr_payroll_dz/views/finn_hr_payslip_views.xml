<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--Payslip Line -->
        <record id="view_hr_payslip_line_tree" model="ir.ui.view">
            <field name="name">hr.payslip.line.tree</field>
            <field name="model">finn.hr.payslip.line</field>
            <field name="arch" type="xml">
                <tree string="Structure salariale" editable="bottom" decoration-info="total == 0">
                    <field name="category_id"/>
                    <field name="employee_id" column_invisible="True"/>
                    <field name="sequence"/>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="quantity"/>
                    <field name="rate"/>
                    <field name="amount"/>
                    <field name="total"/>
                    <field name="amount_select" column_invisible="True"/>
                </tree>
            </field>
        </record>

        <record id="view_hr_payslip_line_form" model="ir.ui.view">
            <field name="name">hr.payslip.line.form</field>
            <field name="model">finn.hr.payslip.line</field>
            <field name="arch" type="xml">
                <form string="Ligne de bulletin de salaire">
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="slip_id"/>
                            <field name="employee_id"/>
                        </group>
                        <group string="Calculs">
                            <field name="category_id"/>
                            <field name="amount_select"/>
                            <field name="amount_fix" readonly="amount_select,'!=','fix'"/>
                            <field name="amount_percentage" readonly="amount_select,'!=','percentage'"/>
                            <field name="sequence"/>
                        </group>
                        <field name="note"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="view_hr_payslip_line_filter" model="ir.ui.view">
            <field name="name">hr.payslip.line.select</field>
            <field name="model">finn.hr.payslip.line</field>
            <field name="arch" type="xml">
                <search string="Rechercher des lignes de bulletins">
                    <field name="name" string="Lignes du bulletin"
                           filter_domain="['|',('name','ilike',self),('code','ilike',self)]"/>
                    <field name="amount_select"/>
                    <field name="slip_id"/>
                    <group col="8" colspan="4" expand="0" string="Group By">
                        <filter string="Catégorie de règle salariale" name="category_id" context="{'group_by':'category_id'}"/>
                        <filter string="Type de montant" name="amount_select" context="{'group_by':'amount_select'}"/>
                        <filter string="Employés" name="employee_id" context="{'group_by':'employee_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- payslip -->

        <record id="view_hr_payslip_tree" model="ir.ui.view">
            <field name="name">hr.payslip.tree</field>
            <field name="model">finn.hr.payslip</field>
            <field name="arch" type="xml">
                <tree decoration-info="state in ('confirm','hr_check','accont_check')"
                      decoration-muted="state == 'cancel'" string="Feuilles de paie">
                    <field name="number"/>
                    <field name="employee_id"/>
                    <field name="name"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="state"/>
                    <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                    <field name="payslip_run_id" column_invisible="True"/>
                </tree>
            </field>
        </record>

        <record id="hr_payslip_view_kanban" model="ir.ui.view">
            <field name="name">hr.payslip.kanban</field>
            <field name="model">finn.hr.payslip</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_content oe_kanban_global_click">
                                <div class="row">
                                    <div class="col-6">
                                        <strong>
                                            <field name="employee_id"/>
                                        </strong>
                                    </div>
                                    <div class="col-6">
                                        <span class="float-right badge badge-secondary">
                                            <field name="state"/>
                                        </span>
                                    </div>
                                    <div class="col-12">
                                        <span>
                                            <field name="date_from"/>
                                            -
                                            <field name="date_to"/>
                                        </span>
                                    </div>
                                    <div class="col-12">
                                        <span>
                                            <field name="name"/>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="act_payslip_lines" model="ir.actions.act_window">
            <field name="name">Payslip Computation Details</field>
            <field name="res_model">finn.hr.payslip.line</field>
            <field name="context">{'default_slip_id': active_id,'search_default_slip_id': active_id}</field>
        </record>  

        <record id="view_hr_payslip_form" model="ir.ui.view">
            <field name="name">hr.payslip.form</field>
            <field name="model">finn.hr.payslip</field>
            <field name="arch" type="xml">
                <form string="Feuille de paie">
                    <header>
                        <field name="etat" invisible="1"/>
                        <field name="test_base_mois" invisible="1"/>


                        <button string="Confirmer" 
                            name="action_payslip_done" 
                            type="object" 
                            invisible="state != 'draft'" 
                            class="oe_highlight"
                            />


                        <button string="Avoir" 
                            name="action_refund_sheet" 
                            invisible="credit_note == True or state not in ('confirm', 'done')" 
                            type="object"
                            />


                        <button string="Marquer comme brouillon"
                            name="action_payslip_draft" 
                            type="object" 
                            invisible="state != 'cancel'"
                            />

                        <button string="Calculer la feuille" 
                            name="action_compute_sheet" 
                            type="object" 
                            invisible="state != 'draft'" 
                            class="oe_highlight"
                            />

                        <button string="Annuler la fiche de paie" 
                            name="action_payslip_cancel" 
                            type="object" 
                            invisible="state != 'done'"
                            />

                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_load_payslip" string="Recharger l'employé" type="object" icon="fa-refresh"/>
                            <button name="%(act_payslip_lines)d"
                                    class="oe_stat_button"
                                    icon="fa-money"
                                    type="action">
                                <field name="payslip_count" widget="statinfo" string="Lignes de paie" help="Détails du calcul de la fiche de paie"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <label for="employee_id" class="oe_edit_only"/>
                            <h1>
                                <field name="employee_id" placeholder="Employé" readonly="state != 'draft'"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <label for="date_from" string="Période"/>
                                <div>
                                    <field name="date_from" class="oe_inline" widget="daterange" options="{'related_end_date': 'date_to'}" readonly="state != 'draft'"/>
                                    -
                                    <field name="date_to" class="oe_inline" widget="daterange" options="{'related_end_date': 'date_from'}" readonly="state != 'draft'"/>
                                </div>
                                <field name="number"/>
                                <field name="name" readonly="state != 'draft'"/>
                            </group>
                            <group>
                                <field name="contract_id" 
                                    domain="[('employee_id','=',employee_id),('date_start','&lt;=',date_to),'|',('date_end','&gt;=',date_from),('date_end','=',False)]" 
                                    context="{'default_employee_id': employee_id}" 
                                    readonly="state != 'draft'"
                                    />

                                <field name="struct_id" required="contract_id == True" readonly="state != 'draft'"/>
                                <field name="all_accounts_balance"/>
                                <field name="balance_date" invisible="not all_accounts_balance"/>
                                <field name="credit_note" invisible="state == 'draft'"/>
                                <field name="payslip_ref" invisible="not credit_note" readonly="state != 'draft'" domain="[('employee_id','=',employee_id)]"/>
                                <field name="base_vals" invisible="1"/>
                                <field name="refund_payslip" invisible="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Jours travaillés et congés">
                                <div>
                                  <separator string="Jours travaillés"/>
                                  <button name="action_compute_work" class="string oe_highlight" icon="fa-refresh" type="object"/>
                                </div>
                                  
                                <span invisible="not test_base_mois" class="fa fa-exclamation-triangle text-danger pl-3"/>
                                <span class="text-danger" invisible="not test_base_mois"> Attention!! Le nombre total de jours n'est pas égale à la base mois du contrat
                                </span>
                                <field name="worked_days_line_ids" context="{'default_contract_id': contract_id}" readonly="state != 'draft'">
                                    <tree string="Jours travaillés" editable="bottom" decoration-info="code in ['ABSA','JC']">
                                        <field name="name"/>
                                        <field name="code"/>
                                        <field name="number_of_days" sum="Nb. jours travaillés"/>
                                        <field name="number_of_hours" sum="Nb. heures travaillés"/>
                                        <field name="contract_id" column_invisible="True"/>
                                        <field name="sequence" column_invisible="True"/>
                                    </tree>
                                    <form string="Jour travaillé">
                                        <group col="4">
                                            <field name="name"/>
                                            <field name="code"/>
                                            <field name="sequence"/>
                                            <field name="number_of_days"/>
                                            <field name="number_of_hours"/>
                                            <field name="contract_id"/>
                                        </group>
                                    </form>
                                </field>
                                <separator string="Congé annuel"/>
                                <group>
                                    <group>
                                        <field name="leave_type_id" options="{&quot;no_open&quot;: True}" widget="many2many_tags"/>
                                    </group>
                                    <group>
                                        <field name="holi_number_day_cp"/>
                                    </group>
                                </group> 
                                <separator string="Résumé des congés"/>
                                <field name="annual_leave_ids" nolabel="1">
                                    <tree>
                                        <field name="name"/>
                                        <field name="leave_type_id"/>
                                        <field name="allocated_days_number"/>
                                        <field name="used_number_days"/>
                                        <field name="leave_amount" widget="monetary"/>
                                        <field name="received_amount" widget="monetary"/>
                                    </tree>
                                </field>
                                <div>
                                    <button string="Attribuer" name="action_compute_conge" type="object" class="oe_highlight" style="float:right" invisible="state == 'done'"/>
                                  <separator string="Montant des congés"/>
                                </div>
                                <field name="leave_line_ids" nolabel="1" readonly="state != 'draft'">
                                    <tree>
                                        <field name="annual_leave_id"/>
                                        <field name="leave_type_id"/>
                                        <field name="number_of_days"/>
                                        <field name="amount"/>                    
                                    </tree>
                                </field>
                                <group>
                                    <field name="leave_used_amount"/>
                                    <field name="currency_id" invisible="1"/>
                                    <field name="total_holiday_pay" invisible="not all_accounts_balance"/>
                                </group>
                            </page>
                            <page string="Autres Entrées">
                                <div>
                                    <separator string="Autres entrées" style="float:left"/>
                                    <button string="Ajouter une régulation" name="action_regulation" type="object" class="oe_highlight" style="float:right" invisible="state == 'done'"/>
                                    
                                </div>
                                <field name="input_line_ids" colspan="4" nolabel="1" context="{'default_contract_id': contract_id}" readonly="state != 'draft'">
                                    <tree string="Données d'entrée" editable="bottom" default_order="name" limit="80">
                                        <field name="code"/>
                                        <field name="name"/>
                                        <field name="amount"/>
                                        <field name="contract_id" column_invisible="True"/>
                                        <field name="sequence" column_invisible="True"/>
                                    </tree>
                                    <form string="Ligne de bulletin de salaire">
                                        <group col="4">
                                            <field name="name"/>
                                            <field name="code"/>
                                            <field name="sequence"/>
                                            <field name="amount"/>
                                            <field name="contract_id"/>
                                        </group>
                                    </form>
                                </field>
                            </page>
                            <page string="Calcul du salaire">
                                <field name="line_ids" colspan="4" nolabel="1" readonly="state != 'draft'">
                                    <tree string="Calcul du salaire" editable="bottom" decoration-info="total == 0" limit="80">
                                        <field name="name"/>
                                        <field name="code"/>
                                        <field name="category_id"/>
                                        <field name="sequence" column_invisible="True"/>
                                        <field name="quantity"/>
                                        <field name="rate"/>
                                        <field name="salary_rule_id" column_invisible="True"/>
                                        <field name="amount"/>
                                        <field name="total"/>
                                    </tree>
                                    <form string="Ligne de bulletin de salaire">
                                        <group col="4">
                                            <field name="name"/>
                                            <field name="code"/>
                                            <field name="category_id"/>
                                            <field name="sequence"/>
                                            <field name="quantity"/>
                                            <field name="rate"/>
                                            <field name="amount"/>
                                            <field name="total"/>
                                            <field name="salary_rule_id"/>
                                        </group>
                                    </form>
                                </field>
                            </page>
                            <page string="Informations comptables">
                                <group>
                                    <group string="Divers">
                                        <field name="company_id" groups="base.group_multi_company"/>
                                        <field name="payslip_run_id" domain="[('state','=','draft')]" readonly="state != 'draft'"/>
                                    </group>
                                    <group name="accounting" string="Comptabilité">
                                        <field name="date"/>
                                        <field name="journal_id" required="1" readonly="state != 'draft'"/>
                                        <field name="move_id" readonly="1"/>
                                    </group>
                                </group>
                                <div colspan="4">
                                    <field name="note" placeholder="Ajouter une note interne..."/>
                                </div>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_hr_payslip_filter" model="ir.ui.view">
            <field name="name">hr.payslip.select</field>
            <field name="model">finn.hr.payslip</field>
            <field name="arch" type="xml">
                <search string="Rechercher dans les feuilles de paie">
                    <field name="name" string="Feuilles de paie"
                           filter_domain="['|',('name','ilike',self),('number','ilike',self)]"/>
                    <field name="date_from"/>
                    <filter string="Broullion" name="draft" domain="[('state','=','draft')]" help="Draft Slip"/>
                    <filter string="Fait" name="done" domain="[('state','=','done')]" help="Done Slip"/>
                    <field name="employee_id"/>
                    <field name="payslip_run_id"/>
                    <group expand="0" string="Regrouper par">
                        <filter string="Employés" name="employee_id" context="{'group_by':'employee_id'}"/>
                        <filter string="Lot de bulletins de paie" name="payslip_run_id" context="{'group_by':'payslip_run_id'}"/>
                        <filter string="Sociétés" name="company_id" groups="base.group_multi_company"
                                context="{'group_by':'company_id'}"/>
                        <filter string="États" name="state" context="{'group_by':'state'}"/>
                    </group>
                    <filter name="filter_state" string="Bulletins" domain="[('contract_id.structure_type_id.name','!=','Consultant')]"/>
                </search>
            </field>
        </record>

        <record id="action_view_hr_payslip_form" model="ir.actions.act_window">
            <field name="name">Bulletins de l'employee</field>
            <field name="res_model">finn.hr.payslip</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="search_view_id" ref="view_hr_payslip_filter"/>
        </record>

        <record id="act_hr_employee_payslip_list" model="ir.actions.act_window">
            <field name="res_model">finn.hr.payslip</field>
            <field name="name">Feuilles de paie</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_employee_id': [active_id], 'default_employee_id': active_id}</field>
        </record>

        <record id="action_view_hr_payslip_2" model="ir.actions.act_window">
            <field name="name">Bulletins de l'employé</field>
            <field name="res_model">finn.hr.payslip</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'current_view': 'bulletin'}</field>
            <field name="search_view_id" ref="finnapps_hr_payroll_dz.view_hr_payslip_filter"/>
            <field name="domain">['|','|', ('contract_id.structure_type_id.name','!=','Consultant'), ('contract_id.structure_type_id','=', False),('contract_id','=', False)]</field>
        </record>

	    <record id="action_view_hr_payslip_1" model="ir.actions.act_window">
            <field name="name">État des prestations de services</field>
            <field name="res_model">finn.hr.payslip</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'current_view': 'préstations de services'}</field>
            <field name="domain">[('contract_id.structure_type_id.name','=','Consultant')]</field>
        </record> 
        
        <!-- payslip runs -->

        <record id="hr_payslip_run_filter" model="ir.ui.view">
            <field name="name">hr.payslip.run.search</field>
            <field name="model">finn.hr.payslip.run</field>
            <field name="arch" type="xml">
                <search string="Rechercher des lots de bulletin de paie">
                    <field name="name" string="Lots de bulletins de paie"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <filter string="Broullion" name="draft" domain="[('state','=','draft')]" help="Lots brouillons de bulletins de paie"/>
                    <filter name="done_filter" string="Fait" domain="[('state','=','close')]"
                            help="Lots terminés de bulletins de paie"/>
                    <field name="journal_id" string="Journal de salaire"/>
                </search>
            </field>
        </record>

        <record id="hr_payslip_run_tree" model="ir.ui.view">
            <field name="name">hr.payslip.run.tree</field>
            <field name="model">finn.hr.payslip.run</field>
            <field name="arch" type="xml">
                <tree string="Lots de bulletins de paie">
                    <field name="name"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                     <field name="journal_id"/>
                    <field name="credit_note"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="hr_payslip_run_view_kanban" model="ir.ui.view">
            <field name="name">hr.payslip.run.kanban</field>
            <field name="model">finn.hr.payslip.run</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_content oe_kanban_global_click">
                                <div class="row">
                                    <div class="col-6">
                                        <strong>
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                    <div class="col-6">
                                        <span class="float-right badge badge-secondary">
                                            <field name="state"/>
                                        </span>
                                    </div>
                                    <div class="col-12">
                                        <span>
                                            <field name="date_start"/>
                                            -
                                            <field name="date_end"/>
                                        </span>
                                        <span class="float-right" title="Is a Blocking Reason?">
                                            <field name="credit_note" widget="boolean"/>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="hr_payslip_run_form" model="ir.ui.view">
            <field name="name">hr.payslip.run.form</field>
            <field name="model">finn.hr.payslip.run</field>
            <field name="arch" type="xml">
                <form string="Lots de bulletins de paie">
                    <header>
                        <button name="%(action_hr_payslip_by_employees)d" type="action" invisible="state == 'draft'"
                                string="Générer les bulletins de paie" class="oe_highlight"/>

                        <button string="Marquer comme brouillon" name="draft_payslip_run" type="object" invisible="state == 'close'"/>
                        <button string="Marquer comme Terminer" name="done_payslip_run" type="object" invisible="state == 'draft'"
                                class="oe_highlight"/>
                        <button name="close_payslip_run" type="object" string="Fermer" invisible="state == 'draft'"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" style="width:338px" readonly="state != 'draft'"/>
                        </h1>
                        <group col="4">
                            <label for="date_start" string="Période"/>
                            <div>
                                <field name="date_start" class="oe_inline" readonly="state != 'draft'"/>
                                -
                                <field name="date_end" class="oe_inline" readonly="state != 'draft'"/>
                            </div>
                            <field name="credit_note"/>
                             <field name="journal_id" readonly="state != 'draft'"/>
                        </group>
                        <separator string="Bulletins de paie"/>
                        <field name="slip_ids" readonly="state != 'draft'"/>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_hr_payslip_run_tree" model="ir.actions.act_window">
            <field name="name">Lots de bulletins de paie</field>
            <field name="res_model">finn.hr.payslip.run</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="search_view_id" ref="hr_payslip_run_filter"/>
        </record>
    </data>

</odoo>
