<?xml version="1.0"?>
<odoo>
	<data>
		<!-- Vue formulaire -->
		<record id="finn_hr_payroll_book_total_view_form" model="ir.ui.view">
			<field name="name">Livre de paie total</field>
			<field name="model">finn.hr.payroll.book.total</field>
			<field name="arch" type="xml">
				<form >
                    <field name="company_id" invisible = "1"/>
					<sheet>
						<group >
                        	<group>
                                <field name="code"/>
						    </group>
							<group>
                                <field name="name"/>
						    </group>
                            <group>
                                <field name="total"/>
						    </group>
						</group>
				    </sheet>
				</form>
			</field>
		</record>

		<record id="finn_hr_payrol_book_total_view_tree" model="ir.ui.view">
			<field name="name">Livre de paie total</field>
			<field name="model">finn.hr.payroll.book.total</field>
			<field name="arch" type="xml">
				<tree >
					<field name="sequence" />
                    <field name="code" />
					<field name="name" />
					<field name="total" />
					<field name="sequence" />
				</tree>
			</field>
		</record>
	</data>
</odoo>
