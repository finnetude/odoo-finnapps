<odoo>
	<data>
		<record id="hr_leave_entitlement" model="ir.ui.view">
			<field name="name">Titre de congé</field>
			<field name="model">hr.leave.entitlement</field>
			<field name="arch" type="xml">
				<form >
					
					
					<group string="Sélectionner l'employé(e) pour l'impression du titre de congé">

	                </group>

					<group>
						<group>
							<field name="leave_id"/>
							<field name="address_during_leave"/>
							<field name="employee_ids" invisible="1" widget="many2many_tags_avatar"/>
						</group>
						<group>
							<field name="employee_id" domain="[('id', '=', employee_ids)]"/>
							<field name="employee_allocation" invisible="1"/>
							<field name="reliquat" invisible="1"/>
						</group>
					</group>				


					<footer>
						<button name="print_leave_entitlement" string="Imprimer" type="object" class="oe_highlight" />
	    				
						<button string="Fermer" class="oe_link" special="cancel" />
					</footer>


			
						
					
				</form>
			</field>
		</record>

		<record id="action_hr_leave_entitlement" model="ir.actions.act_window">
			<field name="name">Titre de congé</field>
			<field name="res_model">hr.leave.entitlement</field>
			<field name="view_id" ref="hr_leave_entitlement"/>
			<field name="view_mode">form</field>
			<field name="context">{'default_leave_id':active_id, 'default_employee_ids':active_id.employee_ids}</field>
			<field name="target">new</field>
		</record>

		
	

	</data>


	
</odoo>
