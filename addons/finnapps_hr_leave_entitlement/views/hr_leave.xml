<?xml version="1.0" encoding="utf-8"?>
<odoo>
  	<data>
  		<record id="hr_leave_view_form" model="ir.ui.view">
			<field name="name">Titre de congé</field>
			<field name="model">hr.leave</field>
			<field name="inherit_id" ref="hr_holidays.hr_leave_view_form"/>
			<field name="arch" type="xml">
				<xpath expr="//button[@name='action_approve']" position="after">
					<button name="%(action_hr_leave_entitlement)d" string="Imprimer titre de congé" class="oe_highlight" type="action" invisible="leave_entitlement != True " context="{'default_leave_id':id}"/>

				</xpath>
				<xpath expr="//group[@name='col_left']" position="after">
					<group>
						<field name="return_to_work_date" invisible="leave_entitlement != True "/>
						<field name="leave_entitlement" invisible="1"/>
					</group>
				</xpath>
			
			</field>
		</record>


  	</data>
</odoo>